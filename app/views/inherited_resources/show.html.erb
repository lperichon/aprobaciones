<div class='block'>
<div class='content'>
<div class='inner'>
<h2> Show <%= resource_class.name %></h2>
<table>
<% resource.attributes.each do |a| %>
  <tr>
    <th><%= a[0] %></th>
    <td><%= a[1] %></td>
  </tr>
<% end %>
</table>
<% if element_actions(resource).include? :edit %>
<p><%= link_to "Edit", edit_resource_url(resource) %></p>
<% end %>
<p><%= link_to "Back", collection_url %></p>
</div>
</div>
</div>